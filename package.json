{
  "name": "package-playground",
  "version": "1.0.0",
  "description": "",
  "private": false,
  "main": "packages/src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rlagnl/webpack4-template.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rlagnl/webpack4-template/issues"
  },
  "homepage": "https://github.com/Rlagnl/webpack4-template#readme",
  "engines": {
    "node": ">=10.13.0",
    "npm": ">= 6.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix 'packages/src/**/*.ts'",
    "init": "npm install && npm run init:submodule && npm run lerna:bootstrap && npm run lerna:symlink && npm run build:package",
    "init:submodule": "git submodule init && git submodule update --remote",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:symlink": "lerna add package-startup --scope=src",
    "lerna:clean": "lerna clean",
    "prebuild": "rimraf output",
    "build": "cross-env TS_NODE_PROJECT=\"tsconfig.json\" webpack --config webpack.config.ts",
    "build:package": "lerna run --scope package-startup build",
    "start": "cross-env TS_NODE_PROJECT=\"tsconfig.json\" webpack-dev-server --config webpack.config.ts --color --progress",
    "start:package": "lerna run --scope package-startup start",
    "precommit": "lint-staged",
    "commit": "git-cz"
  },
  "lint-staged": {
    "{packages/src}/**/*.ts": [
      "prettier --tab-width 2 --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/axios": "^0.14.0",
    "@types/extract-text-webpack-plugin": "^3.0.4",
    "@types/node": "^14.0.1",
    "@types/uglifyjs-webpack-plugin": "^1.1.0",
    "@types/webpack": "^4.41.13",
    "@types/webpack-dev-server": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
